@model Gvm.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Şifrenizi mi unuttunuz ?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section HeaderButtons
{
    <span id="extr-page-header-space"> <a href="@Url.Action("Login", "Account")" class="btn btn-info">Giriş Yap</a> &nbsp;&nbsp;&nbsp;&nbsp; <a href="@Url.Action("Register", "Account")" class="btn btn-danger">Üye Ol</a> </span>
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            @if (ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @*@Html.ValidationSummary(true)*@
                    @Html.ValidationSummary("")
                </div>
            }

            <div class="box box-primary">
                <div class="box-body">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Şifrenizi yenilemeniz için size e-posta gönderilecek</h4>
                            <hr />

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="E-postama Gönder " />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
 