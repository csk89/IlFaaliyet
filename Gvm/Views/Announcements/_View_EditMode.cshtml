@using System.ServiceModel.Description
@model Turkok.Model.Announcement

<aside class="right-side">
    <section class="content-header">
        <h1>@Model.Title</h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body table-responsive no-padding" style="margin-left: 10px;">
                        <div>
                            @Html.Raw(HttpUtility.HtmlDecode(Model.Description))<br />
                        </div>
                        <hr />
                        <div class="callout callout-info">
                            <div class="pull-left">
                                <strong>Yayınlama Zamanı:</strong> @Html.DisplayFor(model => model.PublishDate)<br />
                                @* <strong>Oluşturan:</strong> @Model.CreateBy.UserName*@
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <hr />
                        <div>
                            <div> <i class="fa fa-files-o"></i>Eklentiler</div>
                            @{ Html.RenderPartial("Attachment"); }
                            <div id="attachment_list">
                                @Html.Partial("AttachmentList", Model.Attachments)
                            </div>
                        </div>

                        <div class="pull-right">
                            <div class="btn-group">
                                @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Sil", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you wish to delete this ?');" })
                                @Html.ActionLink("Duyurular", "Index", null, new { @class = "btn btn-info btn-sm" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>


<script>
    $(document).ready(function () {
        var manualuploader = $('#manual-fine-uploader').fineUploader({
            request: {
                endpoint: '/Announcements/UploadToAnnouncement?id=@Model.Id'
            },
            template: "qq-template-manual-noedit",
            autoUpload: false
        }).on('complete', function (event, id, fileName, responseJSON) {
            if (responseJSON.success) {
                $('#attachment_list').html(responseJSON.attachmentsHtml);
            }
        });

        $('#triggerUpload').click(function () {
            manualuploader.fineUploader('uploadStoredFiles');
        });
    });
</script>

